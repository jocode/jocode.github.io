---
// Import necessary assets
import profileImage from '../assets/img/profile.png';
---

<div class="profile-photo">
  <img src={profileImage.src} alt="Johan Mosquera" title="Perfil" />
</div>

<style>
  .profile-photo {
    text-align: center;
    position: relative;
    z-index: 10;
    margin-top: -80px;
    margin-left: 14px;
  }
  
  .profile-photo img {
    height: 115px;
    width: 115px;
    vertical-align: top;
    border-radius: 50%;
    border: 5px solid rgba(41, 23, 6, 0.7);
    margin-top: 0;
  }
</style>